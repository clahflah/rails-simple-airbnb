<%= image_tag "ny-screen.png", class: "img-banner" %>
<div class='show-box'>
  <h2><%= @flat.name %></h2>
  <h3><%= @flat.address %></h3>
</div>
<div class='show-box'>
  <h3>A bit more about this flat...</h3>
  <p><%= @flat.description %></p>
</div>
<div class='show-box flat-details'>
    <p><i class="fa-solid fa-people-group"></i> <%= @flat.number_of_guests %></p>
    <p><i class="fa-solid fa-dollar-sign"></i> <%= @flat.price_per_night %></p>
</div>

<%= link_to "Edit Flat", edit_flat_path %>
<%= link_to "Delete", flat_path(@flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
